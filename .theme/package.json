{
  "name": "@0x-jerry/vitepress-theme-blog",
  "description": "My Blog",
  "version": "1.0.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0x-jerry/blog.git"
  },
  "bugs": {
    "url": "https://github.com/0x-jerry/blog/issues"
  },
  "type": "module",
  "homepage": "https://github.com/0x-jerry/blog#readme",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./config": {
      "types": "./config.d.ts",
      "default": "./dist/config.js"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "tsup",
    "release": "x-release",
    "dev": "tsup --watch vitepress"
  },
  "tsup": {
    "entry": [
      "vitepress/config.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "clean": true
  },
  "dependencies": {
    "@0x-jerry/utils": "^2.0.2",
    "@iconify/json": "^2.2.165",
    "@intlify/unplugin-vue-i18n": "^2.0.0",
    "@vueuse/core": "^10.7.1",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "heti": "^0.9.4",
    "less": "^4.2.0",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "reading-time": "^1.5.0",
    "sass": "^1.69.7",
    "shiki": "^0.14.7",
    "unocss": "^0.58.3",
    "unplugin-icons": "^0.18.1",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.0.11",
    "vitepress": "1.0.0-rc.42",
    "vue": "^3.4.5",
    "vue-i18n": "^9.8.0"
  },
  "devDependencies": {
    "@0x-jerry/x-release": "^0.4.0",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.10.6",
    "@types/nprogress": "^0.2.3",
    "dayjs": "^1.11.10",
    "pagefind": "^1.0.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}