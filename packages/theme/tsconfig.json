{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["unplugin-icons/types/vue", "vite/client"],
    "paths": {
      "@@/*": ["./src/*"]
    }
  },
  "include": ["src", "vite", "scripts", "config.ts"]
}
