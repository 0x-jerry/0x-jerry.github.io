{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "vite-plugin-pages/client",
      "unplugin-icons/types/vue"
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "vite", "scripts", "**/.vitepress/**/*.ts", "**/.vitepress/**/*.vue"]
}
